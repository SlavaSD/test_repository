def is_int(x):
  if x - round(x) == 0:
    return True
  else:
    return False
  
  
print is_int(0)



from math import *
def is_int(x):
  if floor(x) - x == 0:
    return True
  else: 
    return False
    
    
    
    
from math import *
def is_int(x):
  if x % 1 == 0:
    return True
  else:
    return False
